# Social Engineering Awareness Program - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-here-make-it-long-and-random-at-least-32-characters
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development (SQLite)
# DATABASE_URL=sqlite:///social_engineering_awareness.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@host:port/database

# =============================================================================
# ADMIN CONFIGURATION (REQUIRED)
# =============================================================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password-here  # REQUIRED - No fallback for security

# =============================================================================
# EMAIL CONFIGURATION (Optional - for password reset functionality)
# =============================================================================
MAIL_SERVER=smtp.your-provider.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your-app-specific-password

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Set to 'true' when deploying to Render
# RENDER=true
